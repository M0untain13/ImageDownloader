<views:MvxWpfView  
	x:Class="WpfProject.Views.MainView"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
	xmlns:views="clr-namespace:MvvmCross.Platforms.Wpf.Views;assembly=MvvmCross.Platforms.Wpf"
	xmlns:viewModels="clr-namespace:CoreProject.ViewModels;assembly=CoreProject"
    xmlns:local="clr-namespace:WpfProject.Views"
	mc:Ignorable="d" 
	d:DataContext="{d:DesignInstance viewModels:MainViewModel}"
	d:DesignHeight="600" d:DesignWidth="500"
	>
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="4*"/>
			<RowDefinition/>
			<RowDefinition/>
		</Grid.RowDefinitions>
        <ListBox Grid.Row="0"
				 ItemsSource="{Binding Path=Components}">
            <ListBox.ItemsPanel>
                <ItemsPanelTemplate>
                    <WrapPanel IsItemsHost="True" />
                </ItemsPanelTemplate>
            </ListBox.ItemsPanel>
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <local:ImageComponent/>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
		<Button Grid.Row="1"
				Content="Start All"
                Command="{Binding Path=StartAllCommand}"/>
		<ProgressBar Grid.Row="2"/>
	</Grid>
</views:MvxWpfView>
